{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist/types",
    "rootDir": "./src",
    "strict": false, // Disabled strict mode
    "esModuleInterop": true,
    "skipLibCheck": true, // Ensured true
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "actions/*": ["actions/*"],
      "hooks/*": ["hooks/*"],
      "reducers/*": ["reducers/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
